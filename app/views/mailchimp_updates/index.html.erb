<p id="notice"><%= notice %></p>

<h1>Listing Mailchimp Updates</h1>

<div class="row">
  <div class="span12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Email</th>
          <th>Update type</th>
          <th>Reason</th>
          <th>Fired at</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @mailchimp_updates.each do |mailchimp_update| %>
          <tr>
            <td><%= mailchimp_update.email %></td>
            <td><%= mailchimp_update.update_type %></td>
            <td><%= mailchimp_update.reason %></td>
            <td><%= mailchimp_update.fired_at %></td>
            <td><%= link_to 'Show', mailchimp_update %></td>
           <!--  <td><%= link_to 'Edit', edit_mailchimp_update_path(mailchimp_update) %></td>
            <td><%= link_to 'Destroy', mailchimp_update, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="span12" style="text-align:center">
    <%= will_paginate @posts, :renderer => BootstrapPagination::Rails %>
  </div>
</div>
