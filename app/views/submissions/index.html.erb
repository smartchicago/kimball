<div class="row">
  <div class="span12">
    <h2>Form Submissions</h2>
    
    <table class="table table-striped">
      <tr><th>Submitted by</th><th>Form Name</th><th>Submitted at</th></tr>
      <% for submission in @submissions do %>
      <tr><td><%= link_to submission.person.full_name, person_path(submission.person, anchor: "submission-#{submission.id}") %></td><td><%= submission.form_name %></td><td><%= submission.created_at.to_s(:long) %></td></tr>
      <% end %>
    </table>
  </div>
</div>