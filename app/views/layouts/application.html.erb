<!DOCTYPE html>
<html>
<head>
  <title>Logan</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <% if Logan::Application.config.google_analytics_enabled %>

  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-37739534-12']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
  
  <% end %>
</head>
<body>
    <div class="navbar navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="<%= root_path %>">CUT Group Management <% unless Rails.env.production? %><span class="" style="color:red;"><%= Rails.env.to_s %></span><% end %></a>
          <div class="nav-collapse collapse">
             <% if current_user %>
              
            <ul class="nav">
              <li class="active"><%= link_to "Home", root_path %></li>  
              <li class=""><%= link_to "People", people_path %></li>
            </ul>
                        
            <!-- account dropdown -->
            <ul class="nav pull-right">
                <li class="dropdown">
                    <%= link_to current_user.email, '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' %>
                    <ul class="dropdown-menu">
                        <li><%= link_to 'Profile', edit_user_registration_path %></li>
                        <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
                    </ul>
                </li>
            </ul>
            
            <%= form_tag search_index_path, :class => "navbar-search pull-right", :method => :get %>
                <%= link_to "advanced search", search_index_path(adv: 1), class: "muted", id: 'adv-search' %>
                <%= text_field_tag :q, params[:q], class: "span2 search-query", placeholder: "query" %>
            </form>            
            
            <% else %>
            <p class="navbar-text pull-right"><%= link_to 'Sign in', new_user_session_path %></p>
            <% end %>
            
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div id="page-container" class="container">        
        <div id="notifications">
            <% if flash[:notice] || flash[:error] %>
                <div class="alert <%= flash[:notice].present? ? "alert-success" : "alert-error" %>">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <%= flash[:notice] %>
                    <%= flash[:error] %>
                </div>
            <% end %>
        </div> <!-- notifications -->
        
        <%= yield %>
    </div> <!-- /container -->        

    <footer>
      <span class='copyright'>&copy; 2013 Smart Chicago Collaborative</span>
    </footer>
</body>
</html>
