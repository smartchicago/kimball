<div class="row">
  <div class="span6">
    <%= form_for(@program) do |f| %>
      <fieldset>
        <legend>Program</legend>        
        <% if @program.errors.any? %>
          <div id="error_explanation" class="alert alert-error">
            <ul>
            <% @program.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'span6' %>

        <%= f.label :description %>
        <%= f.text_area :description, class: 'span6' %>

        <div class="form-actions">
          <%= f.submit 'Save', class: "btn btn-primary" %>
          <%= link_to 'Cancel', :back, class: "btn" %>
        </div>
        
      </fieldset>
    <% end %>    
  </div>
  <div class="span6">
    <p class="well">Programs are the societal issue that individual applications are attempting to address. "Safe passage to school" and "affordable broadband" are examples of Programs.</p>
  </div>
</div>
